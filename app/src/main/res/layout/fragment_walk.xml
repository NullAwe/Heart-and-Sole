<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomepageActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:text="Welcome"
        android:textSize="25sp"
        android:textColor="@color/colorPrimary"
        android:gravity="center"
        android:id="@+id/me_heading" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/me_heading"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:id="@+id/nav_buttons">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Holy Walkamolie"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/holy_walkamolie_heading" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:padding="0dp"
                    android:src="@drawable/holy_walkamolie"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:elevation="1dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:padding="0dp"
                    android:src="@drawable/coming_soon"
                    android:alpha="0.5"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:elevation="1dp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Scavenger Run"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/scavenger_run_heading"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:padding="0dp"
                    android:src="@drawable/scavenger_run"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:onClick="goToScavengerRun"
                    android:elevation="1dp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Red Hot Chili Steppers"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/red_hot_chili_steppers_heading"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:padding="0dp"
                    android:src="@drawable/red_hot_chili_steppers"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:elevation="1dp"
                    android:onClick="goToRedHotChiliSteppers" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Sole-ly For You"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/solely_for_you_heading"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:padding="0dp"
                    android:src="@drawable/solely_for_you"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:onClick="goToSolelyForYou"
                    android:elevation="1dp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Sole Mate"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/sole_mate_heading"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:layout_weight="1">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:padding="0dp"
                    android:src="@drawable/sole_mate"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:elevation="1dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:padding="0dp"
                    android:src="@drawable/coming_soon"
                    android:alpha="0.5"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:elevation="1dp" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="Been There, Run That"
                android:textSize="15sp"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/been_there_run_that_heading"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:clipToPadding="false"
                android:layout_weight="1">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:padding="0dp"
                    android:src="@drawable/been_there_run_that"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:elevation="1dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:padding="0dp"
                    android:src="@drawable/coming_soon"
                    android:alpha="0.5"
                    android:scaleType="centerInside"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:elevation="1dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
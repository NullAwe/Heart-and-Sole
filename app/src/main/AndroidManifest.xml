<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.highdefinition.heartandsole">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="com.highdefinition.heartandsole.HomepageActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.highdefinition.heartandsole.RedHotChiliSteppersActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.highdefinition.heartandsole.solely_for_you.SolelyForYouActivity"
            android:label="@string/title_activity_maps"
            android:screenOrientation="portrait" />

        <activity
            android:name="com.highdefinition.heartandsole.scavenger_run.ScavengerRunActivity"
            android:label="@string/title_activity_maps"
            android:screenOrientation="portrait" />
    </application>

</manifest>